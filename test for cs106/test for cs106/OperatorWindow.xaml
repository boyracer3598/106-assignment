        <Rectangle Grid.Column="1" HorizontalAlignment="Center" Height="344" Margin="0,25,0,0" Grid.Row="1" Fill="#EFF0F2" VerticalAlignment="Top" Width="235" RadiusX="11.04" RadiusY="11.04"/>

        <Button x:Name="assignButton" Click="Assign" Grid.Column="1" HorizontalAlignment="Left" Margin="72,325,0,0" VerticalAlignment="Top" Grid.Row="1" Height="34" Width="106" BorderBrush="Transparent" Background="Transparent">
