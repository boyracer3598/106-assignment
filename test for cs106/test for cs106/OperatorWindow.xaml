            <Label Content="Ticket Created by" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-10,10,0,0"/>
            <Label x:Name="UserT" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-5,10,0,0" FontWeight="Bold"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Margin="22,74,22,62" Grid.Row="1">
            <Label x:Name="TitleDescription" Content="Description"/>
            <Rectangle Height="1" Fill="Black" Width="205"/>
            <TextBlock x:Name="description" TextWrapping="Wrap" Text="" Height="61" Width="205" Margin="0, 5 ,0 ,0" FontSize="10" FontStyle="Italic"/>
        </StackPanel>
        <Image Source="Resource/lists_icon.png" Margin="0,191,147,153" Grid.Row="1" >

        </Image>
        <Label Content="current tickets" Margin="28,188,10,150" Grid.Row="1"/>
        <Rectangle Stroke="Black" Height="1" Margin="0,219,11,149" Grid.Row="1"/>
        <Image Source="Resource/iconStar.png" Margin="0,233,157,123" Grid.Row="1"></Image>
        <Image Source="Resource/iconStar.png" Margin="0,254,157,102" Grid.Row="1"></Image>
        <Image Source="Resource/iconStar.png" Margin="0,275,157,80" Grid.Row="1"></Image>
        <Button x:Name="tik1" Click="tik1click" Margin="10,225,0,115" Grid.Row="1" Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Left">
            <Label x:Name="tik1text" Content="" Margin="10,0,0,0"/>
        </Button>
        <Button x:Name="tik2" Click="tik1click2" Margin="10,247,0,93" Grid.Row="1" Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Left">
            <Label x:Name="tik2text" Content="" Margin="10,0,0,0"/>
        </Button>
        <Button x:Name="tik3" Click="tik1click3" Margin="10,269,0,71" Grid.Row="1" Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Left">
            <Label x:Name="tik3text" Content="" Margin="10,0,0,0"/>
        </Button>
        <Label x:Name="typelabel" Grid.Column="1" Content="type" HorizontalAlignment="Left" Margin="22,170,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <TextBlock x:Name="typebox" Grid.Column="1" HorizontalAlignment="Center" Margin="0,201,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="19" Width="211"/>





        <Rectangle Grid.Column="2" HorizontalAlignment="Left" Height="36" Margin="27,50,0,0" Grid.Row="1" Fill="#EFF0F2" VerticalAlignment="Top" Width="218" RadiusX="6" RadiusY="6"/>
        <Image Source="Resource/profile.png" Grid.Column="2" Margin="35,45,188,278" Grid.Row="1" />
        <Label x:Name="Op1" Grid.Column="2" Content="" HorizontalAlignment="Left" Margin="67,56,0,0" Grid.Row="1" VerticalAlignment="Top" Width="144"/>

        <Rectangle Grid.Column="2" HorizontalAlignment="Left" Height="36" Margin="27,91,0,0" Grid.Row="1" Fill="#EFF0F2" VerticalAlignment="Top" Width="218" RadiusX="6" RadiusY="6"/>
        <Image Source="Resource/profile.png" Grid.Column="2" Margin="35,86,188,237" Grid.Row="1" />
        <Label x:Name="Op2" Grid.Column="2" Content="" HorizontalAlignment="Left" Margin="67,96,0,0" Grid.Row="1" VerticalAlignment="Top" Width="144"/>

        <Rectangle Grid.Column="2" HorizontalAlignment="Left" Height="36" Margin="27,132,0,0" Grid.Row="1" Fill="#EFF0F2" VerticalAlignment="Top" Width="218" RadiusX="6" RadiusY="6"/>
        <Image Source="Resource/profile.png" Grid.Column="2" Margin="35,127,188,196" Grid.Row="1" />
        <Label x:Name="Op3" Grid.Column="2" Content="" HorizontalAlignment="Left" Margin="67,137,0,0" Grid.Row="1" VerticalAlignment="Top" Width="144"/>

        <Button x:Name="button" Grid.Column="2" Content="" Click="Op1Ass" HorizontalAlignment="Left" Margin="27,50,0,0" Grid.Row="1" VerticalAlignment="Top" Height="36" Width="218" BorderBrush="Transparent" Background="Transparent"/>
        <Button x:Name="button1" Grid.Column="2" Content="" Click="Op2Ass" HorizontalAlignment="Left" Margin="27,93,0,0" Grid.Row="1" VerticalAlignment="Top" Height="36" Width="218" BorderBrush="Transparent" Background="Transparent"/>
        <Button x:Name="button2" Grid.Column="2" Content="" Click="Op3Ass" HorizontalAlignment="Left" Margin="27,132,0,0" Grid.Row="1" VerticalAlignment="Top" Height="36" Width="218" BorderBrush="Transparent" Background="Transparent"/>
        <Rectangle Grid.Column="1" HorizontalAlignment="Center" Height="1" Margin="0,194,0,0" Grid.Row="1" Stroke="Black" VerticalAlignment="Top" Width="211"/>

        <Button Margin="166,0,220,0" Grid.ColumnSpan="2" Background="Transparent" BorderBrush="Transparent" Click="backButton">
            <Image Source="Resource/Arrow1.png" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="10,0,0,0" VerticalAlignment="Center" Width="25" />
        </Button>
    </Grid>


</Window>

    